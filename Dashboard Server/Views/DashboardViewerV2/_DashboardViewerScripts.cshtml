@{
    Layout = null;
    var globalAppSettings = ViewBag.GlobalSettings as GlobalAppSettings;
    var isDebug = globalAppSettings.SystemSettings.IsDebug;
    var isMobile = DeviceDetection.IsMobile;
    var cdnLink = globalAppSettings.SystemSettings.CDNLink;
    var isSelfHosted = ServerAppConfig.IsSelfHosted;
    var dashboardBIUrl = new DashboardServerEndPoints(globalAppSettings).DashboardServerBIUrl();
}

@Styles.Render(isMobile ? "~/bundles/styles/dashboard-viewer-mobile-v2" : "~/bundles/styles/dashboard-viewer-v2")
@Styles.Render("~/bundles/Styles/webdesignerservice/dashboard-viewer-component")

<script src="@(EarlyUrlLocalizer.IgnoreLocalizationUrlPrefix)@ServerAppConfig.InternalAppDataServiceUrl/localization/designerlocalization.js?v=@ServerAppConfig.ProductVersion"></script>

@Scripts.Render("~/bundles/Scripts/webdesignerservice/dashboard-designer-dependency")
<script type="text/javascript" src="https://www.bing.com/api/maps/mapcontrol" async></script>

@*Referred directly in the view page due to pivot grid changes and sfcompressor minification issue*@
@if (isSelfHosted)
{

    @Scripts.Render("~/bundles/Scripts/webdesignerservice/ej1-common-all")
    @Scripts.Render("~/bundles/Scripts/webdesignerservice/ej2-common-all")
    @Scripts.Render("~/bundles/Scripts/webdesignerservice/ej-dashboard-designer")
}
else
{
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
    <script src="@cdnLink/scripts/designer/ej1.common.all.min.js"></script>
    <script src="@cdnLink/scripts/designer/ej2.common.all.min.js"></script>
    <script src="@cdnLink/scripts/designer/ej.dashboarddesigner.min.js"></script>
}

@Scripts.Render(isMobile ? "~/bundles/scripts/dashboard-viewer-mobile-v2" : "~/bundles/scripts/dashboard-viewer-v2")

@Scripts.Render("~/bundles/scripts/localizationcontent")