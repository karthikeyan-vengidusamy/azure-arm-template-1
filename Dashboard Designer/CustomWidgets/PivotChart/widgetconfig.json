      "properties": [
        {
          "displayName": "Chart Type",
          "controlType": "enumeration",
          "name": "chartType",
          "defaultValue": "StackingColumn",
		  "listItems": [
            "Line",
            "Spline",
			"Column",
			"StackingColumn"
          ]
        },
		{
          "displayName": "Chart Color",
          "controlType": "color",
          "name": "chartColor",
          "defaultValue": "#00bdae"
