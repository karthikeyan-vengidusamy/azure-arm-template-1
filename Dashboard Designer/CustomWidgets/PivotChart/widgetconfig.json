        {
          "displayName": "Show Primary Axis",
          "controlType": "bool",
          "name": "showyaxis",
          "defaultValue": "true"
        },
        {
          "displayName": "Show Primary Axis Title",
          "controlType": "bool",
          "name": "showyaxistitle",
          "defaultValue": "true"
        },
        {
          "displayName": "Primary Axis Title Text",
          "controlType": "text",
          "name": "yaxistitletext",
          "defaultValue": ""
        }
      ]
