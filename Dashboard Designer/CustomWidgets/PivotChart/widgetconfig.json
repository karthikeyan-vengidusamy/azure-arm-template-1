        {
          "displayName": "Show Gridline Category Axis",
          "controlType": "bool",
          "name": "glxaxis",
          "defaultValue": "true"
        },
		{
          "displayName": "Show Gridline Primary Axis",
          "controlType": "bool",
          "name": "glyaxis",
          "defaultValue": "true"
        }
      ]
    },
	{
